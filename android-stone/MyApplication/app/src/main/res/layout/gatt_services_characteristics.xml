<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="@dimen/margin_content">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Space android:layout_width="@dimen/margin_empty"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Space android:layout_width="@dimen/margin_empty"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Space android:layout_width="@dimen/margin_empty"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Space android:layout_width="@dimen/margin_empty"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="@dimen/button_size"
            android:textSize="@dimen/button_text_size"
            android:text="@string/MOTOR_SET_Mode1"
            android:textColor="@android:color/white"
            android:id="@+id/Motor_Mode1_Btn"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_content_small">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="@dimen/button_size"
            android:textSize="@dimen/button_text_size"
            android:text="@string/MOTOR_SET_OFF"
            android:textColor="@android:color/white"
            android:id="@+id/Motor_Off_Btn"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layerType="software"
        android:orientation="horizontal"
        android:background="@android:color/transparent"/>

    <TextView
        android:text="Choose Time for Single Period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/Time_Txt" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_spinner" />

    <TextView
        android:text="Choose Motor Max PWM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/motor_max_txt" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pwm_spinner" />
    <!--

            <FrameLayout
                android:id="@+id/sample_content_fragment"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0px" />
    -->
</LinearLayout>
